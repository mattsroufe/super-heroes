<div class="comic-show">
  <img src="{{model.thumbnail.path}}.{{model.thumbnail.extension}}">
  <div>
    <h1>{{model.title}}</h1>
    <p>
      <strong>Published:</strong> {{model.onsaleDate}}
      {{#if model.unlimitedDate}}
        <br>
        <strong>Added to Marvel Unlimited:</strong> {{model.unlimitedDate}}
      {{/if}}
    </p>
    <p>{{model.description}}</p>
  </div>
</div>

